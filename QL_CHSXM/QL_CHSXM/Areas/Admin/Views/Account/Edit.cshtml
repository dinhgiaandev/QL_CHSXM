@model QL_CHSXM.Models.EditAccountViewModel
@{
    ViewBag.Title = "Chỉnh sửa tài khoản";
}

@section naviheader {
    <!-- Liên kết navbar bên trái -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/home" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="#" class="nav-link">@ViewBag.Title</a>
        </li>
    </ul>
}

<!-- Nội dung chính -->
<section class="content">
    <!-- Hộp mặc định -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Chỉnh sửa tài khoản</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Edit", "Account", FormMethod.Post))
            {
                @Html.ValidationSummary(false)
                @Html.AntiForgeryToken()

                <div class="form-group">
                    <label>Tài khoản</label>
                    @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", @readonly = "readonly" })
                </div>

                <div class="form-group">
                    <label>Họ và tên</label>
                    @Html.TextBoxFor(x => x.FullName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.FullName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Số điện thoại</label>
                    @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.Phone, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Role</label>
                    @Html.DropDownListFor(x => x.SelectedRole, (IEnumerable<SelectListItem>)ViewBag.Roles, "-- Chọn vai trò --", new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                </div>
            }
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            <!-- Nội dung footer tùy chọn -->
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->
</section>
<!-- /.content -->