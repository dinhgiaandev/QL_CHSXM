@model IEnumerable<QL_CHSXM.Models.EF.Service>
@if (Model != null && Model.Any())
{
    foreach (var item in Model)
    {
        <!-- Service 1 -->
        var strImge = "";
        var img = item.ServiceImage.FirstOrDefault(x => x.IsDefault);
        if (img != null)
        {
            strImge = img.Image;
        }
        <div class="product-item @item.ServiceCategory.Alias">
            <div class="product discount product_filter">
                <div class="product_image">
                    <img src="@strImge" alt="@item.Title">
                </div>
                <div class="favorite favorite_left"></div>
                @if (item.PriceSale > 0)
                {
                    <div class="product_bubble product_bubble_right product_bubble_red d-flex flex-column align-items-center"><span>sale</span></div>
                }
                <div class="product_info">
                    <h6 class="product_name"><a href="/chi-tiet/@item.Alias-p@(item.Id)">@item.Title</a></h6>
                    @if (item.PriceSale > 0)
                    {
                        <div class="product_price">@QL_CHSXM.Common.Common.FormatNumber(item.PriceSale, 0)<span style="text-decoration:none; color: black" ;font-size: 15px">đ</span><span>@QL_CHSXM.Common.Common.FormatNumber(item.Price, 0)</span><span style="font-size: 15px">đ</span></div>

                    }
                    else
                    {
                        <div class="product_price">@QL_CHSXM.Common.Common.FormatNumber(item.Price, 0)<p><span style="font-size: 15px">đ</span></div>
                    }
                </div>
            </div>
            <div class="red_button add_to_cart_button"><a href="#" class="btnAddToCart" data-id="@item.Id">add to cart</a></div>
        </div>
    }
}
